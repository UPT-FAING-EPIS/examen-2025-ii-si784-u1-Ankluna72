rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /tickets/{ticketId} {
      // TEMPORARY: Allow any authenticated user to do anything except delete.
      // This is insecure but will unblock the agent view immediately.
      allow create, get, list, update: if request.auth != null;
      allow delete: if false;
    }
  }
}
